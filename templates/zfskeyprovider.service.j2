[Unit]
Description=Web Server providing an SSL-encrypted password
After=network.target

[Service]
Type=simple
User=www-data
ExecStart=/usr/bin/python3 /usr/local/bin/zfskeyprovider.py --partner_service={{ vzekey_peer }} --port={{ vzekey_port }}
WorkingDirectory=/usr/local/bin
Restart=always
RestartSec=5
SyslogIdentifier=zfskeyprovider

[Install]
WantedBy=multi-user.target
